<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.form.info_gral_app</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@id='contacts_settings']" position="after">
				<div id="rutas_config">
                    <h2>Configuración rutas</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
                            <field name="check_ruta"/>
						</div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Rutas de contacto</span>
                                <div class="text-muted">
                                    Agregue una ruta comercial al contacto para una mejor gestión en sus reportes
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
			</xpath>
		</field>
	</record>
</odoo>