<?xml version="1.0"?>
<odoo>
    <data>
        <record id="ruta_account_move_inherit_view" model="ir.ui.view">
			<field name="name">ruta.account.move.inherit.view</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
                    <field name="ruta_tag" attrs="{'invisible': [('ruta_tag', '=', False)]}"/>
                    <field name="dia_tag" attrs="{'invisible': [('ruta_tag', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>